<li class="col-lg-4 col-md-6 col-sm-6 col-xs-6 ">
  <div class="product product-style-3 equal-elem ">
    <div class="product-thumnail">
      <%= link_to product do %>
        <figure>
          <%= image_tag show_image(product), alt: "" %>
        </figure>
      <% end %>
    </div>
    <div class="product-info">
      <%= link_to product, class: "product-name" do %>
        <span><%= product.name %></span>
      <% end %>
      <div class="wrap-price"><span class="product-price"><span><%= number_to_currency(product.price, locale: :vi) %></span></div>
      <%= form_tag carts_path, remote: true do  %>
        <%= hidden_field_tag :product_id, product.id %>
        <%= hidden_field_tag :quantity, 1 %>
        <%= submit_tag t(".add_to_cart"), class: "btn btn-danger add-to-cart" %>
      <% end %>
    </div>
  </div>
</li>
